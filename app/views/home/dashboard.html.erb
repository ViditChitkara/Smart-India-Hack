<form class="form-inline" action="/get-quotation-items" data-method="POST" data-remote="true" id="portal-form">
  <div class="container">
    <div class=row>
      <div class="input-group mb-3" style="margin: 4px">
        <div class="input-group-prepend">
          <label class="input-group-text" for="markets">Markets</label>
        </div>
        <select class="custom-select" name="market" id="markets">
          <option selected>Choose...</option>
          <% @markets.each do |m| %>
            <option value="<%= m.id %>"><%= m.name %></option>
          <% end %>
        </select>
      </div>
      <div class="input-group mb-3" style="margin: 4px">
        <div class="input-group-prepend">
          <label class="input-group-text" for="month">Month</label>
        </div>
        <select class="custom-select" name="month" id="month">
          <option selected>Choose...</option>
          <option value="january">January</option>
          <option value="february">February</option>
          <option value="march">March</option>
          <option value="April">April</option>
          <option value="may">May</option>
          <option value="june">June</option>
          <option value="july">July</option>
          <option value="august">August</option>
          <option value="september">September</option>
          <option value="october">October</option>
          <option value="november">November</option>
          <option value="december">December</option>
        </select>
      </div>
      <div class="input-group mb-3" style="margin: 4px">
        <div class="input-group-prepend">
          <label class="input-group-text" for="month">Year</label>
        </div>
        <input name="year" type="number" min="1999" max="2025">        
      </div>
      <button style="margin-bottom: 16px;margin-top: 4px;" type="submit" class="btn btn-primary">Lookup</button>
    </div>
  </div>
</form>
<div class="container" id="q_items">
</div>